model Login {
    id        String   @id @default(cuid())
    username  String?  @unique
    email     String?  @unique
    password  String?
    createdAt DateTime @default(now()) @map(name: "created_at")
    updatedAt DateTime @updatedAt @map(name: "updated_at")
}

model Course {
    id         String      @id @default(cuid())
    number     String
    name       String
    professors Professor[]
}

model Professor {
    id               String   @id @default(cuid())
    name             String
    difficultyRating Int
    teachingStyle    String
    campus           String[]
    day              String[]
    time             String[]
    courses          Course[]
}

model EECE_Course {
    id         String           @id @default(cuid())
    number     String
    name       String
    professors EECE_Professor[]
}

model EECE_Professor {
    id               String        @id @default(cuid())
    name             String
    difficultyRating Int
    teachingStyle    String
    campus           String[]
    day              String[]
    time             String[]
    courses          EECE_Course[]
}
